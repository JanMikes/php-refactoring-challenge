{
  "name": "malfini/php-refactoring-challenge",
  "type": "project",
  "description": "Project for challenging the refactoring skills!",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "ext-pdo": "*",
    "ext-json": "*",
    "vlucas/phpdotenv": "^5.4",
    "psr/container": "^2.0",
    "psr/log": "^3.0",
    "monolog/monolog": "^3.0",
    "league/container": "^5.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-phpunit": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "RefactoringChallenge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RefactoringChallenge\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit tests --colors=always --stderr --stop-on-failure",
    "phpstan": "php vendor/bin/phpstan --memory-limit=-1 analyse"
  }
}
